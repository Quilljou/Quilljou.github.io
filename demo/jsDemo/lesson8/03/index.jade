<!DOCTYPE html>
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        meta(http-equiv="X-UA-Compatible", content="ie=edge")
        title 拖拽-html
        style. 
            body {
                background: #444;
            }
            .box {
                width: 100px;
                height: 100px;
                border-radius: 4px;
                border: 1px solid #ccc;
                background: #111;
                position: absolute;
            }
            .box:last-of-type {
                margin-top: 100px;
            }
    body
        .box#boxOne(draggable='true')
        .box#boxTwo(draggable='true')
        
        script.
            window.onload = function() {
                var g = {
                    boxOne : document.getElementById('boxOne'),
                    boxTwo : document.getElementById('boxTwo'),
                    diffX : 0,
                    diffY : 0
                }
                g.boxOne.ondragstart = function(event) {
                    g.diffX = event.pageX - this.offsetLeft; 
                    g.diffY = event.pageY - this.offsetTop; 
                    //- console.log(g.diffX);
                }
                
                g.boxOne.ondragend = function(event) {
                    //- var posX = 
                    console.log(event.pageX);
                    console.log(g.diffX);
                    this.style.left = event.pageX - g.diffX + 'px';
                    this.style.top = event.pageY - g.diffY + 'px';
                }
                
                g.boxTwo.ondragover = function() {
                    this.style.border = '1px dashed snow';
                }
                
                g.boxTwo.ondragenter = function() {
                    this.style.border = '1px dashed snow';
                }
                g.boxTwo.ondragleave = function() {
                    this.style.border = '';
                }

            }
