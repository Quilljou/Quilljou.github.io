        script.
            window.onload = function() {
                var g = {
                    slider : document.querySelector('.slider'),
                    sink : document.querySelector('.sink'),
                    startX : 0,
                    clicked : false,
                    iphone : document.querySelector('.iphone'),
                    time: document.querySelector('.time h1') ,
                    date: document.querySelector('.time p')
                    //- computedStyle : document.defaultView.getComputedStyle(this.sink,null)
                }
                //- console.log(g.sink);
                //- console.log(g.computedStyle.padding);
                g.slider.onmousedown = capture;
                g.slider.ontouchstart = capture;
                
                function capture(event) {
                    g.startX = event.clientX;
                    g.clicked = true;
                }
                
                
                g.slider.onmousemove = move;
                g.slider.ontouchmove = move;
                
                function move(event) {
                    var sinkWidth = g.sink.offsetWidth;
                    var padding = 6;
                    var max = sinkWidth - g.slider.offsetWidth - padding * 2;
                    if(g.clicked) {
                        var diff = event.clientX - g.startX;
                        if(diff < 0 ) {
                            g.slider.style.marginLeft = '0';
                        }else if(diff >= max) {
                            g.slider.style.marginLeft = max + 'px';
                        }else {
                            g.slider.style.marginLeft = diff + 'px';
                        }
                    }
                }
                
                g.slider.onmouseup = release;
                g.slider.ontouchend = release;
                
                function release(event) {
                    g.clicked = false;
                    var sinkWidth = g.sink.offsetWidth;
                    var padding = 6;
                    var max = sinkWidth - g.slider.offsetWidth - padding * 2;
                    var diff = event.clientX - g.startX;
                    if(diff <= max /2) {
                        g.slider.style.marginLeft = '0';
                    }else {
                        g.slider.style.marginLeft = max + 'px';
                        setTimeout(function(){
                            g.iphone.style.display = 'none';
                        },300)
                    }
                }
                
                
                //moment.js
                function render(){
                    var time = moment().format('HH:mm');
                    var date = moment().format('dddd,MMMM DD');
                    g.date.innerHTML = date;
                    g.time.innerHTML = time;
                }
                
                render()
                setInterval(render,1000);
            }
