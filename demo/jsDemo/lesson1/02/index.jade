<!DOCTYPE html>
html(lang="en")
head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(http-equiv="X-UA-Compatible", content="ie=edge")
    title 网页换肤
    style.
        html {
            background: lightgreen;
        }
        .contianer {
            width: 600px;
            margin: 0 auto;
        } 
        .control {
            margin: 10px 0;
        }
        .control div {
            box-sizing: border-box;
            border: 5px solid;
            width: 20px;
            height: 20px;
            float: left;
            margin: 10px;
            cursor: pointer;
        }
        .nav {
            clear: both;
            list-style: none;
            margin: 0;
            padding: 0;
            width: 100%;
            text-align: center;
            border: 1px solid #fff;
        }
        .nav li {
            display: inline-block;
            width: 16%;
            background-color: green;
        }
        .nav li a {
            color: #fff;
            text-decoration: none;
        }
        .nav li a:hover {
            text-decoration: underline;
        }
        .control .red {
            border-color: red;
            background-color: red;
        }
        .control .green {
            border-color: green;
            background-color: green;
        }
        .control .black {
            border-color: black;
            background-color: black;
        }

body
    .contianer
        .control#control
            .red#red
            .green#green
            .black#black
        ul.nav#nav
            li 
                a(href="#") 新闻
            li 
                a(href="#") 娱乐
            li
                a(href="#") 体育
            li 
                a(href="#") 电影
            li 
                a(href="#") 音乐
            li 
                a(href="#") 旅游
    script.
        window.onload = function() {
            var control = document.getElementById('control');
            var red = document.getElementById('red');
            var green = document.getElementById('green');
            var black = document.getElementById('black');
            var nav = document.getElementById('nav')
            var colors = {
                bgRed: "pink",
                navRed: "red",
                bgGreen: "lightgreen",
                navGreen: "green",
                bgBlack: "gray",
                navBlack: "black"
            }
            //- 默认绿色
            green.style.backgroundColor = 'white';
            
            control.addEventListener('click',function(evnet){
                //- set control backgroundColor
                for(var i = 0, len = this.children.length; i <  len; i++){
                     this.children[i].style.backgroundColor = '';
                }
                evnet.target.style.backgroundColor = 'white';
                
                // change navbar backgroundColor and body backgroundColor
                switch (evnet.target) {
                    case red:
                        changeColor(colors.bgRed,colors.navRed);
                        break;
                    case green:
                        changeColor(colors.bgGreen,colors.navGreen);
                        break;
                    case black:
                        changeColor(colors.bgBlack,colors.navBlack);
                        break;
                }
                
                
                function changeColor(bgcolor,navcolor) {
                    for (var i = 0; i < nav.children.length; i++) {
                        nav.children[i].style.backgroundColor = navcolor;
                        //- 因为nav.children是一个nodeList不能对这个数组设置背景颜色，所以需要遍历每一个子元素节点，对他们设置背景颜色
                    }
                    console.log(window.documentElement);
                    document.documentElement.style.backgroundColor = bgcolor;
                }
            });
        }
