    script.
        window.onload = function(){
            var container = document.getElementById('container');
            function handler(event){
                switch (event.type) {
                    case 'mouseenter':
                        //- function(){
                            changeStyle(this,'backgroundColor','#ccc');
                            changeStyle(this,'border','10px solid red');
                        //- }
                        break;
                    default:
                        //- function(){
                            this.style= '';
