body
    input(type="text")
    span + 
    input(type="text")
    span = 
    span#result ?
    input(type="button" value="求和")
    
    script.
        window.onload = function () {
            var inputs = document.getElementsByTagName('input');
            var result = document.getElementById('result');
            for (var i = 0; i < inputs.length - 1; i++) {
                inputs[i].addEventListener('keyup',function(e){
                    this.value = this.value.replace(/[^\d]/,'');
                })
            }
            
            inputs[2].addEventListener('click',function(){
                var resultText = parseInt(inputs[0].value) + parseInt(inputs[1].value);
                (inputs[0].value === '' || inputs[1].value === '') ? alert('请不要输入空字符') : result.innerText = resultText;
            });
        }
